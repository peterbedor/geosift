{% extends 'layouts.website' %}

{% import 'macros.forms' as forms %}

{% set errors = errors.messages %}

{% block content %}
	<form role="form" method="post" class="login">
		<h1 class="login__heading">Log In</h1>

		{{ csrf_field() }}

		{{ forms.input({
			infieldLabel: true,
			id: 'email',
			name: 'email',
			label: 'email',
			value: old('email'),
			errors: errors
		}) }}

		{{ forms.input({
			infieldLabel: true,
			id: 'password',
			type: 'password',
			label: 'password',
			name: 'password',
			errors: errors
		}) }}

		{{ forms.button({
			type: 'submit',
			label: 'Login',
			classes: 'button button-colored login__button'
		}) }}

		<footer class="login__footer">
			<a href="" class="login__reset-link">Forgot Your Password?</a>

			{{ forms.checkbox({
				id: 'remember',
				name: 'remember',
				label: 'Remember Me',
				labelClasses: 'login__remember-me'
			}) }}
		</footer>
	</form>

{% endblock %}